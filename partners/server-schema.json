{  
  "title": "PublicRegistryMcpServerData",
  "type": "object",
  "required": [ "name", "title", "summary", "description" ],
  "properties": {
    "name": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "summary": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "kind": {
      "type": "string",
      "default": "mcp"
    },
    "license": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "url": { "type": "string" }
      }
    },
    "externalDocumentation": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "url": { "type": "string" }
      }
    },
    "icon": {
      "type": "string"
    },
    "repository": {
      "type": "object",
      "properties": {
        "url": { "type": "string" },
        "source": { "type": "string" }
      }
    },
    "useCases": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
