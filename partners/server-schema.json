      "type": "string"
    },
    "visibility": {
      "type": "string"
    },
    "categories": {
      "type": "string"
    },
    "connectorName": {
      "type": "string"
    },
    "securitySchemes": {
      "type": "object",
      "additionalProperties": {
        "oneOf": [
          {
            "type": "object",
            "required": [ "type", "description", "scheme" ],
            "properties": {
              "type": {
                "type": "string",
                "enum": [ "http" ]
              },
              "description": { "type": "string" },
              "scheme": { "type": "string" },
              "bearerFormat": { "type": "string" }
            }
          },
          {
            "type": "object",
            "required": [ "type", "description", "in", "name" ],
            "properties": {
              "type": {
                "type": "string",
                "enum": [ "apiKey" ]
              },
              "description": { "type": "string" },
              "in": { "type": "string" },
              "name": { "type": "string" }
            }
          },
          {
            "type": "object",
            "required": [ "type", "description", "flows" ],
            "properties": {
              "type": {
                "type": "string",
                "enum": [ "oauth2" ]
              },
              "description": { "type": "string" },
              "authorizationUrl": { "type": "string" },
              "tokenUrl": { "type": "string" },
              "refreshUrl": { "type": "string" },
              "scopes": {
                "type": "array",
                "items": { "type": "string" }
              },
              "flows": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": [ "authorizationCode", "clientCredentials" ]
                }
              }
            }
          }
        ]
      }
    },
    "packages": {
      "type": "array",
      "items": { "type": "object" }
